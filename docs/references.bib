@article {hamilton2025,
	author = {Hamilton, Nolan H and McMichael, Benjamin D and Love, Michael I and Furey, Terrence S},
	title = {Genome-Wide Uncertainty-Moderated Extraction of Signal Annotations from Multi-Sample Functional Genomics Data},
	elocation-id = {2025.02.05.636702},
	year = {2025},
	doi = {10.1101/2025.02.05.636702},
	publisher = {Cold Spring Harbor Laboratory},
	abstract = {Motivation Most genome-wide consensus profiles of regulatory features consist of discrete binary annotations, or {\textquotedblleft}peaks{\textquotedblright}, identified as enriched in functional genomics data targeting loci with a particular molecular phenotype, e.g., accessible chromatin or a transcription factor binding site. Despite the established practical utility of this paradigm, these annotations can limit the representation of quantitative signal data to rigid boundaries and mask informative spatial and structural features in signals. We reasoned that a more robust integration of numeric data from multiple samples could elucidate higher-resolution genome-wide profiles for improved molecular state characterizations. This integration poses several fundamental challenges due to dynamic, sample-specific noise patterns that vary in their effects across the genome and render straightforward data aggregation approaches vulnerable to signal dilution or distortion.Results We propose Consenrich, a genome-wide state-estimation scheme for extraction of consistent underlying signals given functional sequencing data from multiple samples. Consenrich addresses fundamental challenges inherent in this task by implementing a biologically-informed model for signal and variance propagation that treats nonstationary noise processes to yield a genome-wide signal track of positional estimates and measures of uncertainty. We demonstrate improved multi-sample signal estimation and noise attenuation of Consenrich on real, heterogeneous functional genomics data compared to least-squares smoothing filters and straightforward {\textquotedblleft}alignment merging{\textquotedblright} strategies. We highlight immediate practical appeal of this improved signal extraction performance for both traditional consensus peak calling tasks and address the potential for unique analyses not possible with simple binary peak calls.Availability and Implementation A software implementation of Consenrich accompanied by several practical usage examples and documentation is hosted at https://github.com/nolan-h-hamilton/Consenrich.Competing Interest StatementThe authors have declared no competing interest.},
	journal = {bioRxiv}
}

@article{hamilton2023,
    author = {Hamilton, Nolan H and Furey, Terrence S},
    title = {ROCCO: a robust method for detection of open chromatin via convex optimization},
    journal = {Bioinformatics},
    volume = {39},
    number = {12},
    pages = {btad725},
    year = {2023},
    month = {11},
    abstract = {Analysis of open chromatin regions across multiple samples from two or more distinct conditions can determine altered gene regulatory patterns associated with biological phenotypes and complex traits. The ATAC-seq assay allows for tractable genome-wide open chromatin profiling of large numbers of samples. Stable, broadly applicable genomic annotations of open chromatin regions are not available. Thus, most studies first identify open regions using peak calling methods for each sample independently. These are then heuristically combined to obtain a consensus peak set. Reconciling sample-specific peak results post hoc from larger cohorts is particularly challenging, and informative spatial features specific to open chromatin signals are not leveraged effectively.We propose a novel method, ROCCO, that determines consensus open chromatin regions across multiple samples simultaneously. ROCCO employs robust summary statistics and solves a constrained optimization problem formulated to account for both enrichment and spatial dependence of open chromatin signal data. We show this formulation admits attractive theoretical and conceptual properties as well as superior empirical performance compared to current methodology.Source code, documentation, and usage demos for ROCCO are available on GitHub at: https://github.com/nolan-h-hamilton/ROCCO. ROCCO can also be installed as a stand-alone binary utility using pip/PyPI.},
    issn = {1367-4811},
    doi = {10.1093/bioinformatics/btad725},
}

